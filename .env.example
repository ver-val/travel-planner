# Application
PORT=3000
# Database
DB_HOST=pgcat
DB_PORT=6432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=travel_planner
# Host port that the primary Postgres container exposes (avoid clashing with PgCat port)
DB_PORT_EXPOSE=5432
# PgCat (host ports; containers still use 6432/9930 internally)
PGCAT_PORT=6432
PGCAT_ADMIN_PORT=9930
PGCAT_ADMIN_USERNAME=pgcat_admin
PGCAT_ADMIN_PASSWORD=pgcat_admin_pass
